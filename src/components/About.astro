<style>
    .about-container{
        display: flex;
        flex-direction: column;
        padding: 8rem;
        padding-top: 12rem;
    }

    #banner-container{
        height: 100%;
        max-height: 100%;
        max-width: calc(100vw - 17px);
        width: 100%;
        overflow: hidden;
        position:absolute;
        left:0; top:0;
        z-index: -1;
    }

    #banner-container::after {
        content:'';
        position:absolute;
        left:0; top:0;
        width:100%; height:100%;
        overflow: hidden;
        display:inline-block;
        background-color: #2c1e30;
        background-image: radial-gradient(ellipse 90% 120% at top, #18171E00 0%, #18171Eff 85%);
        transition: background-color 1.5s ease;
        z-index: 2; 
    }

    #banner-container.transition::after {
        background: radial-gradient(ellipse 100% 120% at top, #18171E00 0%, #18171Eff 85%);
    }

    .banner{
        height: 100%;
        width: 100%;
        object-fit: cover;
        object-position: top;
    }
    
    .main-block-container{
        display: flex;
        justify-content: center;
        gap: 2rem;
        color: #fff;
    }

    .titles-container{
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .img-container{
        width: 185px;
        height: 185px;
        overflow: hidden;
        border-radius: 50%;
    }

    .img-container img{
        height: 100%;
        width: 100%;
        object-fit: cover;
        transition: all 1s;
        filter: saturate(0);
        transform: scale(1.4);
    }

    .img-container img.zoom-out{
        transform: scale(1);
        filter: saturate(0.8);
        
    }

    h1{
        margin: 0;
        font-size: 2rem;
        font-family: "Monda";
    }

    hr{
        border-color: #F42BF9;
        height: 0px;
        width: 100%;
        margin: 0;
        opacity: 1;
    }

    h2{
        font-weight: 400;
        font-size: 1.25rem;
        margin-top: 3px;
        margin-bottom: 0;
    }

    .location-container{
        display: flex;
        align-items: center;
    }

    .location{
        font-size: 0.75rem;
        margin: 4px 6px;
    }

    .open-to-work-badge{
        color: #0b5a0b;
        background-color: #9cc49c;
        text-align: center;
        width: fit-content;
        font-weight: 500;
        font-size: 0.9rem;
        padding: 3px 3rem;
        border-radius: 1rem;
    }

    .description-container{
        margin: 3rem auto;
        max-width: 40rem;
        width: 100%;
        padding: 0 2rem;
    }

    .description{
        color: #fff;
        font-weight: 300;
        font-size: 15px;
        text-align: justify;
    }

    .otb-link{
        text-decoration: none;
        color: #cc24cf;
        font-weight: 700;
    }

    .otb-link:hover{
        color: #F42BF9;
        
    }

    .button-container{
        display: flex;
        justify-content: center;
        gap: 3.5rem;
    }

    .contact-btn{
        background-color: transparent;
        border: none;
        border-radius: 6px;
        font-family: 'Monda', sans-serif;
        height: fit-content;
        padding: 0;
    }

    .contact-btn:hover{
        background-color: #ffffff09;
    }

    .contact-btn a{
        margin: 0;
        width: 100%;
        height: 100%;
        text-decoration: none;
        color: #F42BF9;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        justify-content: center;
        font-weight: 700;
        padding: 10px 4rem;
    }


    @media screen and (max-width: 768px) {

        .about-container{
            display: flex;
            flex-direction: column;
            padding: 10rem 4rem;
        }

        #banner-container{
            max-width: 100vw;
        }

        .main-block-container{
            display: flex;
            justify-content: center;
            gap: 1rem;
            color: #fff;
        }

        .img-container{
            width: 170px;
            height: 170px;
        }

        h1{
            font-size: 1.75rem;
        }

        h2{
            font-weight: 400;
            font-size: 1rem;
            margin-top: 3px;
            margin-bottom: 0;
        }

        .description-container{
            margin: 5rem auto;
            max-width: 40rem;
            width: 100%;
            padding: 0 2rem;
        }

        .description{
            color: #fff;
            font-weight: 300;
            font-size: 1rem;
            text-align: justify;
        }

        .button-container{
            display: flex;
            justify-content: space-evenly;
            gap: 0.5rem;
        }

        .contact-btn{
            border: 0 solid #2c1933;
            border-radius: 6px;
            font-family: 'Monda', sans-serif;
            height: fit-content;
            padding: 0;
            background-color: #ffffff09;
            font-size: 12px;
        }

        .contact-btn:hover{
            background-color: #ffffff09;
        }

        .contact-btn a{
            gap: 10px;
            justify-content: center;
            font-weight: 700;
            padding: 10px 2rem;
            width: 9rem;
        }

    }

    @media screen and (max-width: 512px) {

        .about-container{
            display: flex;
            flex-direction: column;
            padding: 4rem 2rem;
        }

        #banner-container{
            max-width: 100vw;
        }

        .main-block-container{
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .img-container{
            width: 140px;
            height: 140px;
        }

        h1{
            font-size: 1.6rem;
        }

        h2{
            font-weight: 400;
            font-size: 1rem;
            margin-top: 3px;
            margin-bottom: 0;
        }

        .description-container{
            margin: 1rem auto 3rem;
            max-width: 40rem;
            width: 100%;
            padding: 0 1rem;
        }

        .description{
            color: #fff;
            font-weight: 300;
            font-size: 12px;
            text-align: justify;
        }

        .button-container{
            display: flex;
            flex-direction: column;
            justify-content: space-evenly;
            align-items: center;
            gap: 0.5rem;
        }

        .contact-btn{
            border: 0 solid #2c1933;
            border-radius: 6px;
            font-family: 'Monda', sans-serif;
            height: fit-content;
            padding: 0;
            background-color: #ffffff09;
            font-size: 10px;
            width: 65%;
        }

        .contact-btn:hover{
            background-color: #ffffff09;
        }

        .contact-btn a{
            gap: 10px;
            justify-content: center;
            font-weight: 700;
            padding: 10px 2rem;
            width: 100%;
        }

    }
</style>