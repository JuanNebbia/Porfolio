---
const lang = Astro.props.lang
const content = await import(`../content/navbar.${lang}.json`);

---


<script>
    const navbar = document.getElementById('navbar')

    const handleScroll = () => {
        if (window.scrollY > 0) {
            navbar.classList.add("scrolled");
        } else {
            navbar.classList.remove("scrolled");
        }
    }

    window.addEventListener("scroll", handleScroll);

    const navBar = document.getElementById("navbar")

    window.addEventListener("click", (event)=>{
        if(event.target.id === "burger-menu-btn"){
            navBar.classList.toggle('open-menu')
        }else{
            navBar.classList.remove('open-menu')
        }
    });

</script>

<header>
    <div class="burger-menu" id="burger-menu">
        <svg xmlns="http://www.w3.org/2000/svg" id="burger-menu-btn" class="icon icon-tabler icon-tabler-menu-2" width="40" height="40" viewBox="0 0 24 24" stroke-width="1.5" stroke="#a256a3" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M4 6l16 0" />
            <path d="M4 12l16 0" />
            <path d="M4 18l16 0" />
        </svg>
        <nav id="navbar">
            <ul>
                <li><a href="#about">{content.about}</a></li>
                <li><a href="#projects">{content.projects}</a></li>
                <li><a href="#experience">{content.experiences}</a></li>
                <li><a href="#certificates">{content.certificates}</a></li>
                <li><a href="#contact">{content.contact}</a></li>
            </ul>
            <div class="lang-container">
                <a href="/">
                    <button class={`left ${lang === 'es' ? 'selected' : ''}`}>ES</button>
                </a> 
                <a href="/en">
                    <button class={`right ${lang === 'en' ? 'selected' : ''}`}>EN</button>
                </a>
            </div>
        </nav>
    </div>
</header>

<style>
    .burger-menu svg{
        display: none;
    }

    nav{
        padding: 1rem;
        position: fixed;
        width: 100%;
        z-index: 100;
        transition: background-color 1s ease;
        display: flex;
        width: 100%;
    }

    .scrolled{
        background-color: #18171Eff;
    }

    .lang-container{
        margin-right:0 ;
        width: 85px;
        margin-left: -85px;
        color: #fff
    }

    .lang-container>a{
        text-decoration: none;
    }

    .lang-container>a>button:hover{
        outline: 1px solid #fb7afdaa;
    }

    .lang-container>a>button{
        background-color: transparent;
        border: none;
        color: #fff;
        font-weight: 400;
        font-size: 12px;
        outline: 1px solid #fb7afd77;
        cursor: pointer;
    }

    .lang-container>a>button.right{
        padding: 6px 8px 6px 4px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    .lang-container>a>button.left{
        padding: 6px 4px 6px 8px;
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    .lang-container>a>button.selected{
        background-color: #fb7afd55
    }

    ul{
        list-style: none;
        display: flex;
        justify-content: center;
        gap: 2.5rem;
        padding: 0;
        margin: 0 auto;
    }

    li{
    }

    li a{
        text-decoration: none;
        color: #fff;
        text-shadow: 0 2px 4px #0F0C1Aaa;
        font-weight: 400;
        font-size: 1.2rem;
        font-family: "Monda";
    }

    li a:hover{
        color: #fb7afde8;
    }

    @media screen and (max-width: 768px) {
        
        .burger-menu{
            background-color: #1f1f22;
            border: 1px solid #a256a3;
            height: 3rem;
            width: 3rem;
            border-radius: 6px;
            position: fixed;
            top: 1rem;
            right: 1rem;
            display: flex;
            z-index: 1000;
        }

        .burger-menu svg{
            margin: auto;
            display: block;
        }

        nav{
            display: none;
            position: fixed;
            top: 4rem;
            right: 2rem;
            width: 80%;
            background-color: #111114dd;
            backdrop-filter: blur(10px);
            border-radius: 9px;
            border-top-right-radius: 0;
        }

        nav.open-menu{
            display: block;
        }

        .scrolled{
            background-color: #111114dd;
        }

        nav ul{
            display: flex;
            flex-direction: column;
        }

        li{
            text-align: center;
        }
    }

</style>