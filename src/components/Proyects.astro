---

<section id='projects'>
    <div class="section-title-container">
        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-script" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F42BF9" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M17 20h-11a3 3 0 0 1 0 -6h11a3 3 0 0 0 0 6h1a3 3 0 0 0 3 -3v-11a2 2 0 0 0 -2 -2h-10a2 2 0 0 0 -2 2v8" />
        </svg>
        <h3 class='section-title'>Proyectos</h3>
    </div>
    <div class="projects-container">
        {projects.map(({title, description, date, techs, img, url, repository}) => {
            return (
                <div class="project-item">
                    <h4 class="project-title">{title}</h4>
                    <p class="project-description">{description}</p>
                    <div class="techs-container">
                        {techs.map(tech => {
                            // const { icon } = techIcons.find(icon => icon.techName === tech)
                            return (
                                <Image src={`/images/icons/${tech}.svg`} alt={`${tech} icon`} width={25} height={25}  loading="lazy" title={tech} />
                                )
                            })
                        }
                    </div>
                    <div class="project-img-container">
                        <Image src={img} alt="" class="project-img" width={100} height={100} loading="eager" />
                        <button class="visit-btn">
                            <a href={url} target="_blank" class="project-link">Visitar</a>
                        </button>
                        <button class="repository-btn">
                            <a href={repository} target="_blank" class="repository-link">Repositorio</a>
                        </button>
                    </div>
                </div>
            )
        })}
    </div>
</section>



<style>
    section{
        margin: 4rem 0;
        padding-top: 4rem;
    }

    .projects-container{
        margin: 4.5rem auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        justify-content: center;
        color: #fff;
        gap: 8rem 10rem;
    }

    .project-title{
        font-size: 1.15rem;
        margin: 0;
        color: #cecece;
    }

    .project-description{
        font-size: 0.9rem;
        font-weight: 400;
        height: 9rem;
        overflow-y: scroll;
        padding-right: 0.5rem;
    }

    .project-description::-webkit-scrollbar {
        width: 0.4rem; 
    }

    .project-description::-webkit-scrollbar-thumb {
        background-color: #F42BF999; 
        border-radius: 6px; 
    }

    .project-description::-webkit-scrollbar-thumb:hover {
        background-color: #F42BF9ff; 
    }

    .techs-container{
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .tech-item{
        font-size: 14px;
    }

    .project-img-container{
        border-radius: 26px;
        overflow: hidden;
        height: 16rem;
        position: relative;
        z-index: -1;
        margin: 10px auto;
        transition: all 0.5s ease;
        z-index: 10;
    }

    
    .visit-btn, .repository-btn{
        position: absolute;
        height: 100%;
        width: 50%;
        background-color: transparent;
        color: transparent;
        transition: all 0.2s ease;
        border: none;
    }
    
    .visit-btn{
        left:0; top:0;
        color: transparent;
        z-index: 20;
    }
    
    .repository-btn{
        left:50%; top:0;
        color: transparent;
        z-index: 20;
    }
    
    .project-img-container button a{
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        text-decoration: none;
        color: inherit;
        font-size: 1.2rem;
        font-weight: 700;
    }
    
    .project-img-container:hover .visit-btn, .project-img-container:hover .repository-btn{
        backdrop-filter: brightness(0.5) blur(4px) saturate(0.6);
        color: #999;
        text-shadow: 0 1px 3px #161616;
    }

    .project-img-container:hover>.visit-btn:hover, .project-img-container:hover>.repository-btn:hover{
        backdrop-filter: brightness(0.9) blur(4px) saturate(0.7);
        color: #fff;
    }
    

    .project-img-container::after{
        content:'';
        position:absolute;
        left:0; top:0;
        width:100%; height:100%;
        overflow: hidden;
        display:inline-block;
        background-color: #00000022;
        box-shadow: inset 0 0 7px #030303;
    }

    .project-img{
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 1s ease;
        transform: scale(1.2);
    }

    .project-img-container:hover .project-img{
        transform: scale(1);
    }

</style>